
<table class="table table-striped table-responsive table-bordered">
    <thead>
        <tr>
            @foreach (var e in ViewBag.props)
            {
                <td>
                    @e.Name
                </td>
            }
            <td>
                Edit/Delete
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in ViewBag.employees)
        {
            <tr>
                @foreach (var p in ViewBag.props)
                {
                    <td>
                        @p.GetValue(@e, null)
                    </td>
                }
                    <td>
                        <button class="btn btn-warning" name="@e.ID">Edit</button>
                        <button class="btn btn-danger" name="@e.ID">Delete</button>
                    </td>
            </tr>
        }
    </tbody>
</table>

